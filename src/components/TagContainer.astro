---
import TagCount from "@/components/TagCount.astro";
import { getCollection } from "astro:content";

const recipes = await getCollection("recipe");

const tags = [
  ...new Set(
    recipes
      .flatMap((recipe) => recipe.data.tags)
      .filter(
        (tag): tag is Exclude<typeof tag, undefined> => tag !== undefined,
      ),
  ),
];
---

<div class="container">
  <div class="title">タグ一覧</div>
  <div class="tagContainer">
    {
      tags.map((tag) => {
        return (
          <TagCount
            tagName={tag}
            count={
              recipes.filter((recipe) => recipe.data.tags.includes(tag)).length
            }
          />
        );
      })
    }
  </div>
</div>

<style>
  .container {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .title {
    text-align: center;
    font-size: 1.25rem;
  }

  .tagContainer {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }
</style>
